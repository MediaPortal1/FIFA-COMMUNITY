<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/navigation_header_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/sym_def_app_icon"
        />
    <TextView
        android:id="@+id/navigation_header_maintextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_header_imageview"
        android:text="TEST TEST TEST"
        />

    <TextView
        android:id="@+id/navigation_header_subtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigation_header_maintextview"
        android:text="TEST TEST TEST"
        android:textSize="12sp"
        />
</RelativeLayout>